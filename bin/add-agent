#!/usr/bin/env bash
# Create a new agent from template

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(dirname "$SCRIPT_DIR")"
AGENTS_DIR="$REPO_ROOT/agents"
TEMPLATE="$AGENTS_DIR/_template.md"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

print_success() { echo -e "${GREEN}✓${NC} $1"; }
print_error() { echo -e "${RED}✗${NC} $1"; }
print_info() { echo -e "${YELLOW}ℹ${NC} $1"; }

usage() {
    cat << EOF
Usage: $(basename "$0") AGENT_NAME [CATEGORY]

Create a new agent from template.

Arguments:
    AGENT_NAME    Name of the agent (lowercase-with-hyphens)
    CATEGORY      Category: core, specialized, or meta (default: core)

Examples:
    $(basename "$0") react-optimizer specialized
    $(basename "$0") code-formatter core
    $(basename "$0") test-runner

EOF
    exit 0
}

# Validate agent name
validate_name() {
    local name="$1"
    if ! echo "$name" | grep -qE "^[a-z0-9-]+$"; then
        print_error "Invalid name format: $name"
        print_info "Use lowercase letters, numbers, and hyphens only"
        exit 1
    fi
}

# Parse arguments
if [ $# -lt 1 ]; then
    usage
fi

AGENT_NAME="$1"
CATEGORY="${2:-core}"

validate_name "$AGENT_NAME"

# Validate category
if [[ ! "$CATEGORY" =~ ^(core|specialized|meta)$ ]]; then
    print_error "Invalid category: $CATEGORY"
    print_info "Must be one of: core, specialized, meta"
    exit 1
fi

TARGET_DIR="$AGENTS_DIR/$CATEGORY"
TARGET_FILE="$TARGET_DIR/${AGENT_NAME}.md"

# Check if already exists
if [ -f "$TARGET_FILE" ]; then
    print_error "Agent already exists: $TARGET_FILE"
    exit 1
fi

# Create from template
cp "$TEMPLATE" "$TARGET_FILE"

# Replace placeholders
TODAY=$(date +%Y-%m-%d)
sed -i.bak "s/name: agent-name/name: $AGENT_NAME/" "$TARGET_FILE"
sed -i.bak "s/created: YYYY-MM-DD/created: $TODAY/" "$TARGET_FILE"
sed -i.bak "s/category: uncategorized/category: $CATEGORY/" "$TARGET_FILE"
rm "${TARGET_FILE}.bak" 2>/dev/null || true

print_success "Created agent: $TARGET_FILE"
echo ""
print_info "Next steps:"
echo "  1. Edit the agent file: $TARGET_FILE"
echo "  2. Fill in the description and system prompt"
echo "  3. Run './bin/validate' to check correctness"
echo "  4. Commit: git add $TARGET_FILE && git commit"
echo ""

# Open in editor if available
if command -v code &> /dev/null; then
    print_info "Opening in VS Code..."
    code "$TARGET_FILE"
elif command -v vim &> /dev/null; then
    print_info "Opening in vim..."
    vim "$TARGET_FILE"
else
    print_info "Edit manually: $TARGET_FILE"
fi
